type: install
name: GeekBook
id: GeekBook
categories: ["apps/dev-and-admin-tools"]

description: |
  AFFiNE deployment manifest file for Jelastic
  
ssl: true

nodes:
  - nodeType: apache2
    nodeGroup: bl
    count: 1
    cloudlets: 8
    fixedCloudlets: 1
    displayName: LoadBalancer
    
  - image: ghcr.io/duncanidaho/geekbook:latest
    count: 1
    cloudlets: 16
    fixedCloudlets: 1
    nodeGroup: cp
    displayName: GeekBook
    isSLBAccessEnabled: false
    volumes:
      - /var/www


success: |
  Your AFFiNE environment is ready to go!