{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}GeekBook Dashboard{% endblock %}
{% block page_actions %}
    <a class="btn btn-primary" href="...">Some Action</a>
{% endblock %}

{% block main %}
<div>
  <canvas id="myChart" width="50" height="10"></canvas>

</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  const ctx = document.getElementById('myChart');
  new Chart(ctx, {
    type: 'pie', // pie, line, bar, 
    data: {
      labels: [{{bookstarName|raw}}, {{bookstarName|raw}}, {{cbookstarName|raw}}, {{cbookstarName|raw}}, {{cbookstarName|raw}}, 'Orange'],
      datasets: [{
        label: ['# of Votes', ' salut all'],
        data: [ {{bookstarRating|raw}}, {{bookstarRating|raw}}, {{cbookstarRating|raw}}, {{cbookstarRating|raw}}, {{cbooksComment|raw}}, 2],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });
</script>
{% endblock %}