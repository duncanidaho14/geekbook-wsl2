
<turbo-stream action="update" target="comment-length-refresh">
    <template>
        <h2>Discussion {{comment|length + 1}}</h2>
    </template>
</turbo-stream>

<turbo-stream action="prepend" target="comment-content-refresh">
    <template>
        <div>
            {{ include('book/_comment.html.twig', {comment, book: book}) }}
        </div>
    </template>
</turbo-stream>

<turbo-stream action="update" target="new-comment-form">
    <template>
        <div>
            {{ include('book/_form.html.twig', { form }) }}
        </div>
    </template>
</turbo-stream>