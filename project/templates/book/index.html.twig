{% extends 'base.html.twig' %}

{% block title %}Les livres de GeekBook !{% endblock %}

{% block body %}
<div class="flex mt-40 ">
<img src="{{asset('build/images/hero.png')}}" />
</div>
<h1 class="mt-80 text-center text-green-700 border-purple-200 rounded-lg shadow dark:bg-purple-800 dark:border-purple-700">Les livres de GeekBook</h1>
    <div class="container m-24 mt-96">
        <section class="flex flex-wrap">

            {% for book in booksRepo %}
                <div class="basis-1/4 p-2">
                    <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                        {% for img in books %}
                        <a href="{{path('app_show_book', {'slug': book.slug })}}">
                            <img class="rounded-t-lg" src="{{img.url}}" alt="{{img.name}}" />
                        </a>
                        {% endfor %}
                        <div class="p-5 w-auto h-70">
                            <a href="{{path('app_show_book', {'slug': book.slug })}}">
                                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{book.introduction}}</h5>
                            </a>
                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{book.description}}</p>
                            <a href="{{path('app_show_book', {'slug': book.slug })}}" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center 
                                text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 
                                dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                {{book.price|number_format(2, ',', '.')}} â‚¬
                                <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" 
                                        d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" 
                                        clip-rule="evenodd">
                                    </path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
                <br>
                <hr>
            {% endfor %}
        <br/>
        </section>
    </div>
{% endblock %}

