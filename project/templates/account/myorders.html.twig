{% extends 'base.html.twig' %}

{% block title %}Mes commandes sur GeekBook !{% endblock %}

{% block body %}

<section class="w-auto mt-40 max-w-sm mx-auto bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    {% if orders|length >= 1 %}
    {% for order in orders %}
    <a href="#">
        <p class="p-8 rounded-t-lg">{{order.fullName}}</p>
    </a>
    <div class="px-5 pb-5">
        <a href="#">
            <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">Commande N° #{{order.reference}}</h5>
        </a>
        <div class="flex items-center mt-2.5 mb-5">
            {% include 'layout/rating.html.twig' with {'rating': order.rating} %}
            <span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ml-3">5.0</span>
        </div>
        <div class="flex items-center justify-between">
            <span class="text-3xl font-bold text-gray-900 dark:text-white">{{order.price|number_format(2, ',', '.')}} €</span>
            <a href="#" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Add to cart</a>
        </div>
    </div>
    {% endfor %}
    {% else %}
        <h1>Vous n'avez effectué aucune commande</h1>

    {% endif %}
</section>

{% endblock %}

{% block javascripts %}
<script src="{{asset('build/app.js')}}"></script>
{% endblock %}