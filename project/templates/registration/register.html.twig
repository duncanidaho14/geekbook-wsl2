{% extends 'base.html.twig' %}

{% block title %}Inscription à GeekBook{% endblock %}

{% block body %}
<div class="body relative isolate px-6 pt-14 lg:px-8 dark:bg-gray-800 dark:text-white">
    <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-80" aria-hidden="true">
        <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
    </div>
    <div class="mx-auto max-w-2xl py-32 sm:py-48 lg:py-56">
        <div>
            {% if app.flashes('success') %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
            {% else %}
                {% for message in app.flashes('failed') %}
                    <div class="alert alert-error">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endif %}
            <div class="items-center justify-center">
                <a href="{{path('app_book')}}" class="flex items-center justify-center mb-8 text-2xl font-semibold lg:mb-10 dark:text-white">
                    <img src="/project/assets/images/logo.svg" class="mr-4 h-11" alt="Geekbook Logo">
                    <span>GeekBook</span>  
                </a>
            <!-- Card -->
        <div class="w-full max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow dark:bg-gray-800">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
                Créer un compte gratuit
            </h2>
            <div class="mt-8 space-y-6" action="#">
            {{ form_start(registrationForm, {'attribute': {
                'class': 'mt-8 space-y-6'
            }}) }}
                {{ form_start(registrationForm) }}
                    <div>
                        {{ form_row(registrationForm.birthday, {
                            label: 'Date de naissance *',
                            label_attr: {
                                class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'
                            },
                            attr: {
                                class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500', 
                            }
                        }) }}
                    </div>
                    <div>
                        <div>
                            {{ form_row(registrationForm.firstName, {
                                label: 'Prénom *',
                                label_attr: {
                                    class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'
                                },
                                attr: {
                                    class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500',
                                    placeholder: 'Votre Prénom requis',
                                    
                                }
                            }) }}
                        </div>
                        <div>
                            {{ form_row(registrationForm.lastName, {
                                label: 'Nom *',
                                label_attr: {
                                    class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'
                                },
                                attr: {
                                    class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500',
                                    placeholder: 'Votre nom requis',
                                    
                                }
                            }) }}
                        </div>
                        <div>
                            {{ form_row(registrationForm.avatar, {
                                label: 'Avatar *',
                                label_attr: {
                                    class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'
                                },
                                attr: {
                                    class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500',
                                    placeholder: 'Votre Avatar requis',
                                    
                                }
                            }) }}
                        </div>
                        <div>
                            {{ form_row(registrationForm.email, {
                                label: 'Email *',
                                label_attr: {
                                    class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'
                                },
                                attr: {
                                    class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500',
                                    placeholder: 'votre@email.com requis',
                                    
                                }
                            }) }}
                        </div>
        
                        <div>
                            {{ form_row(registrationForm.password, {
                                label: 'Mot de Passe *',
                                label_attr: {
                                    class: 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'
                                },
                                attr: {
                                    class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500',
                                    placeholder: 'Votre mot de passe est requis',
                                    
                                }
                            }) }}
                        </div>

                        <div class="flex items-start">
                            <div class="flex items-center h-5 top-1">
                                {{ form_row(registrationForm.agreeTerms, {
                                    label: 'Conditions générales *',
                                    label_attr: {
                                        class: 'font-medium right-1 text-gray-900 dark:text-white'
                                    },
                                    attr: {
                                        class: 'w-4 h-4 border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:focus:ring-primary-600 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600',
                                        
                                    }
                                }) }}
                            </div>
                        </div>
                        <button type="submit" value="Inscription" 
                            class="w-full px-5 py-3 text-base font-medium text-center text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 sm:w-auto dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
                            data-sitekey="6LfnhLQpAAAAAI9MEANONgL1HbqY3A8gMWndChrl" 
                            data-callback='onSubmit' 
                            data-action='submit'
                        >Inscription</button>
                    {{ form_end(registrationForm) }}
                {{ form_end(registrationForm)}}
            </div>
             <div class="text-sm font-medium text-gray-500 dark:text-gray-400">
                Vous avez déjà un compte ? <a href="{{path('app_login')}}" class="text-primary-700 hover:underline dark:text-primary-500">Se connecter</a>
            </div>
        </div>
    </div>
        <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]" aria-hidden="true">
        <div class="relative left-[calc(50%+3rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%+36rem)] sm:w-[72.1875rem] " style=""></div>
    </div>
    </div>
    {% if app.flashes('success') %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    {% else %}
        {% for message in app.flashes('failed') %}
            <div class="alert alert-error">
                {{ message }}
            </div>
        {% endfor %}
    {% endif %}
    </div>
  </div>
</div>
{% endblock %}

