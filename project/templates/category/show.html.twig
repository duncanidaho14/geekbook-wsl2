{% extends 'base.html.twig' %}

{% block title %}Cat√©gories de GeekBook !{% endblock %}

{% block body %}
<div class="container mt-96 mb-96 ">
    {% for category in categorie.book %}
        <h1>{{category.title}}</h1>
        <div class="flex flex-wrap">
            <div class="basis-1/4">
                <a class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
                    {% for img in category.images %}
                        <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src="{{img.url}}" alt="{{img.name}}">
                        <div class="flex flex-col justify-between p-4 leading-normal">
                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{category.introduction}}</h5>
                            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{category.description}}</p>
                        </div>
                    {% endfor %}
                </a>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}

{% block javascripts %}
<script src="{{asset('build/app.js')}}"></script>
{% endblock %}