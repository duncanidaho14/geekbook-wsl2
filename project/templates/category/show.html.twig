{% extends 'base.html.twig' %}

{% block title %}{{categorie.name}} dans la catégorie de GeekBook !{% endblock %}

{% block body %}
<section class="container mx-auto mt-96 items-center">
    <h1 class="text-center text-6xl">Liste des livres dans la catégorie : <span class="bg-green-500">{{categorie.name}}</span></h1>
    <div class="flex flex-wrap m-5">
        {% for category in categorie.book %}
            <div class="basis-1/2 mb-20">
                <h2>{{category.title}}</h2>
                {% for img in category.images %}
                <a href="{{path('app_book_show', {'slug': category.slug})}}" class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
                    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg" src="{{img.url}}" alt="{{img.name}}">
                    <div class=" justify-between p-4 leading-normal">
                        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{category.introduction}}</h5>
                        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{category.description}}</p>
                    </div>
                </a>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
</section>
{% endblock %}

{% block javascripts %}
<script src="{{asset('build/app.js')}}"></script>
{% endblock %}