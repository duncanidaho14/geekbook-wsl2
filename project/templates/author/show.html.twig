{% extends 'base.html.twig' %}

{% block title %}{{author}} de GeekBook !{% endblock %}

{% block body %}
<section class="mt-10">
    <div class="bg-white py-24 sm:py-32 dark:bg-gray-800 dark:text-white">
        <div class="mx-auto grid max-w-7xl gap-x-8 gap-y-20 px-6 lg:px-8 xl:grid-cols-3">
            <ul role="list" class="grid gap-x-8 gap-y-12 sm:grid-cols-2 sm:gap-y-16 xl:col-span-2">
                <li>
                    <div class="flex items-center gap-x-6">
                        <img class="h-16 w-16 rounded-full" src="{{author.avatar}}" alt="{{author.firstName}} {{author.lastName}}">
                        <div>
                            <h3 class="text-base font-semibold leading-7 tracking-tight text-gray-900">{{author.firstName}} {{author.lastName}}</h3>
                            <p class="text-sm font-semibold leading-6 text-indigo-600">{{author.description}}</p>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</section>
{% endblock %}
