{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<style>
    .reset-password{
        width: auto;
        height: 100vh;
        margin-top: 27vh;
        margin-left: 47vh;
    }
</style>
<section class="reset-password">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="">Reset your password</h1>
    <br/>
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrer votre adresse email et nous vous enverrons
                un lien <br /> pour r√©initialiser votre mot de passe
            </small>
        </div>

        <button type="submit" class="rounded-full">Send password reset email</button>
    {{ form_end(requestForm) }}
</section>
{% endblock %}

{% block javascripts %}
    {{ parent()}}
{% endblock %}